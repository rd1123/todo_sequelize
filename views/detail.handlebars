<form action="/todos/{{{todo.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}} checked{{/if}} disabled>
      </div>
    </div>
    <input type="text" name="name" placeholder="name" value="{{{todo.name}}}" class="form-control" disabled>
    <div class="input-group-append">
      <a href="/todos/{{{todo.id}}}/edit" class="btn btn-success mr-1">edit</a>
      <a href="/" class="btn btn-primary mr-1">done</a>
      <button type="submit" class="btn btn-danger">delete</button>
    </div>
  </div>
</form>